events {
    worker_connections 1024;
}

http {
    # Headers b√°sicos de proxy. Ser√£o usados por todos
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # =======================================================
    # SERVIDORES HTTP (Porta 80)
    # Apenas para desafios Certbot e redirecionamento para HTTPS
    # =======================================================

    server {
        listen 80;
        server_name $N8N_DOMAIN;
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
        location / {
            return 301 https://$host$request_uri;
        }
    }

    server {
        listen 80;
        server_name ${EVO_DOMAIN};

        # Redireciona HTTP para HTTPS
        return 301 https://$host$request_uri;
    }


    server {
        listen 443 ssl;
        server_name ${EVO_DOMAIN};

        ssl_certificate /etc/letsencrypt/live/${EVO_DOMAIN}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/${EVO_DOMAIN}/privkey.pem;

        
        # Configura√ß√µes gerais
        proxy_http_version 1.1;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        # üî• Importante: manter o Authorization header
        proxy_set_header Authorization $http_authorization;


        # üåç Permitir CORS globalmente (caso o frontend use origem diferente)
        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Headers "Authorization, Content-Type";
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE";


        location / {
            proxy_pass http://evolution:8080;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Authorization $http_authorization;
        }


        location /manager/ {
            proxy_pass http://evolution:8080/manager/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Authorization $http_authorization;
        }


        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
    }

    server {
        listen 80;
        server_name $PORTAINER_DOMAIN;
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
        location / {
            return 301 https://$host$request_uri;
        }
    }

    # =======================================================
    # SERVIDORES HTTPS (Porta 443)
    # √â aqui que a aplica√ß√£o realmente roda
    # =======================================================

    server {
        listen 443 ssl http2;
        server_name $N8N_DOMAIN;

        # Caminho dos certificados (provido pelo Certbot)
        ssl_certificate /etc/letsencrypt/live/$N8N_DOMAIN/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/$N8N_DOMAIN/privkey.pem;

        location / {
            proxy_pass http://n8n:5678;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade"; # Headers de WebSocket
        }
    }

    server {
        listen 443 ssl http2;
        server_name $EVO_DOMAIN;

        # Caminho dos certificados (provido pelo Certbot)
        ssl_certificate /etc/letsencrypt/live/$EVO_DOMAIN/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/$EVO_DOMAIN/privkey.pem;

        location / {
            proxy_pass http://evolution:8080;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade"; # Headers de WebSocket
        }
    }

    server {
        listen 443 ssl http2;
        server_name $PORTAINER_DOMAIN;

        # Caminho dos certificados (provido pelo Certbot)
        ssl_certificate /etc/letsencrypt/live/$PORTAINER_DOMAIN/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/$PORTAINER_DOMAIN/privkey.pem;

        location / {
            proxy_pass http://portainer:9000;
            # Portainer tamb√©m precisa de WebSocket, mas o Nginx lida 
            # com isso de forma diferente para sub-rotas (/api/websocket)
            # Vamos adicionar os headers aqui tamb√©m por seguran√ßa.
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }
    }
}